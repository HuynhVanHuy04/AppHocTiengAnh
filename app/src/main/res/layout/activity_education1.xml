<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<!-- Bố cục chính là LinearLayout, sắp xếp theo chiều dọc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#99FFCC">

        <!-- Mũi tên quay lại -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/quaylai"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- Tiêu đề: "TỪ VỰNG MỚI" -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỪ VỰNG MỚI"
            android:textColor="#9C27B0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Hướng dẫn: "Chọn hình ảnh đúng" -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn hình ảnh đúng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Phần từ vựng + nút phát âm -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Nút loa (biểu tượng phát âm) -->
            <ImageView
                android:id="@+id/speakerButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/volume"
                android:contentDescription="Phát âm"/>

            <!-- Từ tiếng Anh cần chọn (ví dụ: Student) -->
            <TextView
                android:id="@+id/wordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#3F51B5"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Lưới gồm 4 hình ảnh (2 cột × 2 hàng) -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Hình 1: học sinh -->
            <LinearLayout
                android:id="@+id/boxStudent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgStudent"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/student" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Học sinh" />
            </LinearLayout>

            <!-- Hình 2: giáo viên -->
            <LinearLayout
                android:id="@+id/boxTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTeacher"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teacher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giáo viên" />
            </LinearLayout>

            <!-- Hình 3: Thước -->
            <LinearLayout
                android:id="@+id/boxRuler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgRuler"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ruler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thước" />
            </LinearLayout>

            <!-- Hình 4: Cặp sách -->
            <LinearLayout
                android:id="@+id/boxBackpack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgBackpack"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cặp sách" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxBook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgBook"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/book1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sách" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/boxPen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgPen"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bút" />
            </LinearLayout>

        </GridLayout>

        <!-- Nút kiểm tra đáp án -->
        <Button
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KIỂM TRA"
            android:layout_marginTop="24dp"
            android:backgroundTint="#BDBDBD" />
    </LinearLayout>
</ScrollView>