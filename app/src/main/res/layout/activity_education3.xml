<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<!-- Bố cục chính là LinearLayout, sắp xếp theo chiều dọc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#99FFCC">

        <!-- Mũi tên quay lại -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/quaylai"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- Tiêu đề: "TỪ VỰNG MỚI" -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỪ VỰNG MỚI"
            android:textColor="#9C27B0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Hướng dẫn: "Chọn hình ảnh đúng" -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn hình ảnh đúng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Phần từ vựng + nút phát âm -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Nút loa (biểu tượng phát âm) -->
            <ImageView
                android:id="@+id/speakerButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/volume"
                android:contentDescription="Phát âm"/>

            <!-- Từ tiếng Anh cần chọn (ví dụ: Student) -->
            <TextView
                android:id="@+id/wordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#3F51B5"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Lưới gồm 4 hình ảnh (2 cột × 2 hàng) -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Hình 1: học sinh -->
            <LinearLayout
                android:id="@+id/boxDesk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgDesk"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/desh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn học" />
            </LinearLayout>

            <!-- Hình 2: giáo viên -->
            <LinearLayout
                android:id="@+id/boxEraser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgEraser"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/eraser" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cục tẩy" />
            </LinearLayout>

            <!-- Hình 3: Thước -->
            <LinearLayout
                android:id="@+id/boxPlaygound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgPlaygound"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/playground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sân chơi" />
            </LinearLayout>

            <!-- Hình 4: Cặp sách -->
            <LinearLayout
                android:id="@+id/boxLaboratory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgLaboratory"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/laboratory" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng thí nghiệm" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxChalk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgChalk"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/phan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phấn viết bảng" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxResearcher"
                android:layout_width="0dp"
                android:layout_height="114dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgResearcher"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/nnc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhà nghiên cứu" />
            </LinearLayout>

        </GridLayout>

        <!-- Nút kiểm tra đáp án -->
        <Button
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KIỂM TRA"
            android:layout_marginTop="24dp"
            android:backgroundTint="#BDBDBD" />
    </LinearLayout>
</ScrollView>